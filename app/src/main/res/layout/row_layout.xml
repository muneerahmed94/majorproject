<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="150dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From: "
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/from"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To: "
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/to"
        android:layout_below="@+id/from"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/date"
        android:layout_below="@+id/to"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="Kukatpally"
        android:id="@+id/tv_from"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/date"
        android:layout_toEndOf="@+id/date"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="Ameerpet"
        android:id="@+id/tv_to"
        android:layout_alignTop="@+id/to"
        android:layout_alignLeft="@+id/tv_from"
        android:layout_alignStart="@+id/tv_from" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-02-23"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/tv_date"
        android:layout_alignTop="@+id/date"
        android:layout_alignLeft="@+id/tv_to"
        android:layout_alignStart="@+id/tv_to" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: "
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/time"
        android:layout_below="@+id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:30:00"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/tv_time"
        android:layout_alignTop="@+id/time"
        android:layout_alignLeft="@+id/tv_date"
        android:layout_alignStart="@+id/tv_date" />

</RelativeLayout>